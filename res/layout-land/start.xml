<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="match_parent" android:layout_width="fill_parent"
   android:background="@drawable/bg_landscape" android:id="@+id/linearLayout0">
  
    	
    <LinearLayout style="@style/TitleBar">
        <ImageView style="@style/TitleBarLogo"
            android:id="@+id/vbtHome"
            android:contentDescription="@string/start_header" 
            android:src="@drawable/actionbar_home" /> 

        <ImageView style="@style/TitleBarSeparator" />
        
 		<TextView style="@style/TitleBarText"
    	android:id="@+id/aboutHeader" 
    	android:text="@string/start_header" />
    	

        <View style="@style/TitleBarSpring" />
        
        <ImageView style="@style/TitleBarSeparator" />

        <ImageView style="@style/TitleBarLogo"
            android:id="@+id/vbtActionBarNext"
            android:src="@drawable/ic_media_play" /> 

        
    </LinearLayout>

  
  
    <LinearLayout 
	    android:orientation="vertical"
		android:layout_height="fill_parent" android:id="@+id/linearLayout1"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:background="#8000"
		android:padding="6dip">
		<LinearLayout 
			android:orientation="horizontal"
			android:layout_height="wrap_content" android:id="@+id/linearLayout2"
			android:layout_width="fill_parent" android:layout_weight="1">
		    <Button 
		    	android:id="@+id/button1" android:text="@string/instructions_button"
		    	android:layout_width="fill_parent"
		        android:layout_gravity="center_vertical"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center_horizontal"
	            android:drawableTop="@drawable/icon_info"
	            android:textColor="#ffcccccc"
	            android:background="@null"
		    	/>
		    <Button 
		    	android:id="@+id/button2" 
		    	android:text="@string/start_easter_button"
		    	android:layout_width="fill_parent"
		        android:layout_gravity="center_vertical"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center_horizontal"
	            android:drawableTop="@drawable/icon_easter"
	            android:textColor="#ffcccccc"
	            android:background="@null"
		    	/>
		    <Button 
		    	android:id="@+id/button6" android:text="@string/about_hcjb_button"
		    	android:layout_width="fill_parent"
		        android:layout_gravity="center_vertical"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center_horizontal"
	            android:drawableTop="@drawable/icon_hcjb"
	            android:textColor="#ffcccccc"
	            android:background="@null"
		    	/>
        </LinearLayout>
        
        <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="fill_parent" android:layout_weight="1">
		    <Button 
		    	android:id="@+id/button3" 
		    	android:layout_width="fill_parent"
		        android:layout_gravity="center_vertical"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center_horizontal"
	            android:drawableTop="@drawable/icon_nextstep"
	            android:textColor="#ffcccccc"
	            android:background="@null"
		    	android:text="@string/start_next_step"/>
		    <Button 
		    	android:id="@+id/button5" 
		    	android:layout_width="fill_parent"
		        android:layout_gravity="center_vertical"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center_horizontal"
	            android:drawableTop="@drawable/icon_church"
	            android:textColor="#ffcccccc"
	            android:background="@null" android:text="@string/start_find_church"/>
		    <Button 
		    	android:id="@+id/button4" 
		    	android:layout_width="fill_parent"
		        android:layout_gravity="center_vertical"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center_horizontal"
	            android:drawableTop="@drawable/icon_feedback"
	            android:textColor="#ffcccccc"
	            android:background="@null"
	            android:text="@string/start_feedback"/>
        </LinearLayout>
        
        
        
    </LinearLayout>

	<LinearLayout 
		android:id="@+id/linearLayout1" 
		android:layout_height="wrap_content" 
		android:layout_width="match_parent" 
		android:gravity="center"
	    android:background="#fff">
		
		<ImageView 
			android:src="@drawable/logga_s" 
			android:layout_height="wrap_content"
			android:id="@+id/imageView2" 
			android:gravity="center"
			android:layout_width="wrap_content"/>
			
		<TextView android:text="@string/reklmatext2" 
			android:layout_height="wrap_content" 
			android:id="@+id/textView3" 
			android:layout_width="fill_parent"
			android:gravity="center"
		    android:textSize="20sp"
		    android:textColor="#000"
		    android:layout_margin="10dp"/>
	</LinearLayout>

</LinearLayout>
